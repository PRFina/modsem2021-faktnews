SELECT ?claimant ?claim ?url ?content ?language
WHERE {
    ?claim a fn:Claim; fn:isClaimedBy ?someone.
    ?someone schema:name ?claimant.
    ?claim schema:url ?url.
    ?claim fn:claimContent ?content.
    ?claim dct:language ?language.
} LIMIT  100

/* TODO get authority info
Query federata a VIAF
*/

PREFIX : <http://www.modsem.org/fakt-news#>
PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX dct: <http://purl.org/dc/terms/>
PREFIX dbr:  <http://dbpedia.org/resource/>
PREFIX foaf: <http://xmlns.com/foaf/0.1/>
PREFIX wdt: <http://www.wikidata.org/prop/direct/>
PREFIX wikibase: <http://wikiba.se/ontology#>
PREFIX bd: <http://www.bigdata.com/rdf#>
PREFIX schema: <http://schema.org/>
PREFIX bf: <https://bibframe.org/vocab>

SELECT ?name ?viafId

WHERE { 
    
    ?agent a foaf:Person.
	?agent schema:name ?name.
    
    SERVICE <https://query.wikidata.org/sparql> {
        SELECT ?itemLabel ?viafId 
        WHERE {
            ?item wdt:P214 ?viafId. # P214: VIAF ID
        	?item ?label ?name .
            SERVICE wikibase:label { bd:serviceParam wikibase:language "it, en". }
        }
    }
}
LIMIT 100



